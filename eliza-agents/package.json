{
  "name": "bagsworld-eliza-agents",
  "version": "1.0.0",
  "description": "ElizaOS autonomous agents for BagsWorld - Neo, CJ, Finn, Ash, Toly, Shaw, Ghost, and Bags Bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/standalone-server.js",
    "start:dev": "tsx src/standalone-server.ts",
    "dev": "tsx --watch src/standalone-server.ts",
    "build": "tsc",
    "db:migrate": "tsx src/db/migrate.ts",
    "test": "vitest",
    "telegram:setup": "curl -X GET http://localhost:3001/api/telegram/setup"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.0",
    "@neondatabase/serverless": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
