{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@bagsworld/characters": ["../src/characters/index"],
      "@bagsworld/characters/*": ["../src/characters/*"]
    }
  },
  "include": ["src/**/*", "../src/characters/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"]
}
