# ================================
# BAGSWORLD AGENTS - ENVIRONMENT CONFIGURATION
# ================================

# BagsWorld API (your existing BagsWorld backend)
BAGSWORLD_API_URL=http://localhost:3000

# ================================
# MODEL PROVIDERS (Required - choose one or more)
# ================================

# Anthropic (Recommended for BagsWorld agents)
ANTHROPIC_API_KEY=your-anthropic-key-here

# OpenAI (Alternative)
OPENAI_API_KEY=sk-your-openai-key-here

# ================================
# SOCIAL PLATFORMS (Optional - for autonomous posting)
# ================================

# Twitter/X
TWITTER_USERNAME=your_bot_username
TWITTER_PASSWORD=your_password
TWITTER_EMAIL=your_email
TWITTER_API_KEY=
TWITTER_API_SECRET_KEY=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Discord
DISCORD_APPLICATION_ID=
DISCORD_API_TOKEN=

# Telegram
TELEGRAM_BOT_TOKEN=

# ================================
# BLOCKCHAIN (Optional)
# ================================

# Solana
SOLANA_PUBLIC_KEY=
SOLANA_PRIVATE_KEY=

# ================================
# SYSTEM
# ================================

# Logging
LOG_LEVEL=info

# Database (defaults to SQLite)
DATABASE_URL=sqlite://./data/agents.db

# Server port for agent API
SERVER_PORT=3001
