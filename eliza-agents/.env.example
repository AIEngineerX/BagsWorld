# ================================
# BAGSWORLD AGENTS - ENVIRONMENT CONFIGURATION
# ================================

# BagsWorld API (your existing BagsWorld backend)
BAGSWORLD_API_URL=http://localhost:3000

# ================================
# DATABASE (Required - Neon PostgreSQL)
# ================================

# Neon PostgreSQL connection string
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/bagsworld?sslmode=require

# ================================
# MODEL PROVIDERS (Required - at least one)
# ================================

# Anthropic (Recommended for BagsWorld agents)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI (Alternative)
# OPENAI_API_KEY=sk-your-openai-key-here

# ================================
# TELEGRAM BOT (Required for external access)
# ================================

# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Optional: Restrict to specific chat IDs (comma-separated)
# TELEGRAM_ALLOWED_CHATS=123456789,-987654321

# ================================
# MULTI-AGENT COORDINATION
# ================================

# Enable cross-agent communication
MULTI_AGENT_ENABLED=true

# Agent coordination mode: "broadcast" | "directed" | "both"
COORDINATION_MODE=both

# Shared context refresh interval (ms)
SHARED_CONTEXT_INTERVAL=30000

# ================================
# BLOCKCHAIN (Optional)
# ================================

# Solana RPC URL
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Agent wallet (for autonomous transactions - optional)
# SOLANA_PRIVATE_KEY=base58-encoded-private-key

# ================================
# SYSTEM
# ================================

# Server port for agent API
PORT=3001
HOST=0.0.0.0

# Public URL (for webhook callbacks - auto-set by Render/Railway)
# PUBLIC_URL=https://your-app.onrender.com

# Logging level: debug | info | warn | error
LOG_LEVEL=info

# Node environment
NODE_ENV=development

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://bagsworld.netlify.app

# ================================
# TELEGRAM ADVANCED
# ================================

# Default agent for new conversations
TELEGRAM_DEFAULT_AGENT=finn

# Optional webhook secret for security
# TELEGRAM_WEBHOOK_SECRET=your-secret-token

# ================================
# RATE LIMITING
# ================================

# Max messages per user per minute
RATE_LIMIT_PER_USER=30

# Max total messages per minute
RATE_LIMIT_GLOBAL=500
