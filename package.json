{
  "name": "bags-world",
  "version": "1.0.0",
  "description": "Self-evolving pixel art game powered by Bags.fm on-chain activity",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:agents": "jest --testPathPattern=agents",
    "agent:status": "curl -s http://localhost:3000/api/agent -H \"Authorization: Bearer local-dev-secret-change-in-production\" | jq",
    "agent:trigger": "curl -s -X POST http://localhost:3000/api/agent -H \"Authorization: Bearer local-dev-secret-change-in-production\" -H \"Content-Type: application/json\" -d \"{\\\"action\\\":\\\"trigger\\\"}\" | jq",
    "eliza:install": "cd eliza-agents && npm install",
    "eliza:start": "cd eliza-agents && npm run shaw",
    "eliza:dev": "cd eliza-agents && npm run dev",
    "eliza:status": "curl -s http://localhost:3001/status | jq"
  },
  "dependencies": {
    "@bagsfm/bags-sdk": "^1.2.6",
    "@neondatabase/serverless": "^1.0.2",
    "@netlify/neon": "^0.1.0",
    "@solana/spl-token": "^0.4.14",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.98.4",
    "@tanstack/react-query": "^5.50.0",
    "bs58": "^6.0.0",
    "howler": "^2.2.4",
    "next": "^16.1.4",
    "phaser": "^3.80.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tweetnacl": "^1.0.3",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@netlify/plugin-nextjs": "^5.15.5",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
